<LDAP>
<%- @ldap.sort.each do |key, values| -%>
<%- [*values].each do |value| -%>
<%- next if value.nil? -%>
<%= key %> <%=
  case value
    when String
      value
    when TrueClass
      'yes'
    when FalseClass
      'no'
    else
      value
  end
%>
<%- end -%>
<%- end -%>
</LDAP>

<Authorization>
<%- @authorization.sort.each do |key, values| -%>
<%- [*values].each do |value| -%>
<%- next if value.nil? -%>
<%= key %> <%=
  case value
    when String
      value
    when TrueClass
      1
    when FalseClass
      0
    else
      value
  end
%>
<%- end -%>
<%- end -%>
